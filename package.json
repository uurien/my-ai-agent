{
  "name": "my-ai-agent",
  "version": "1.0.0",
  "description": "Agente AI especialista en administraci√≥n de sistemas",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "./build.sh",
    "start": "npm run build && electron .",
    "dev": "rm -rf dist && tsc && cp -r src/renderer dist/renderer && cp -r src/resources dist/ && electron . --dev",
    "build:app": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "ai",
    "chatgpt",
    "kubernetes",
    "docker",
    "sysadmin"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^24.10.1",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "node-pty": "^1.0.0",
    "openai": "^6.9.1",
    "vue": "^3.5.24"
  },
  "build": {
    "appId": "com.my-ai-agent.app",
    "productName": "AI Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
